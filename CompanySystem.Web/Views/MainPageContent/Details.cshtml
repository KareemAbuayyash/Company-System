@model CompanySystem.Web.ViewModels.MainPageContentViewModel

@{
    ViewData["Title"] = "Content Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Content Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ContentId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <span class="badge bg-info me-2">@Model.SectionName</span>
            @Model.Title
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h6 class="text-muted">Content:</h6>
                <div class="border rounded p-3 bg-light">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>
            </div>
            <div class="col-md-4">
                <h6 class="text-muted">Information:</h6>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Content ID:</strong></td>
                        <td>@Model.ContentId</td>
                    </tr>
                    <tr>
                        <td><strong>Section:</strong></td>
                        <td><span class="badge bg-info">@Model.SectionName</span></td>
                    </tr>
                    <tr>
                        <td><strong>Created:</strong></td>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <td><strong>Created By:</strong></td>
                        <td>@Model.CreatedBy</td>
                    </tr>
                    @if (Model.UpdatedDate.HasValue)
                    {
                        <tr>
                            <td><strong>Last Updated:</strong></td>
                            <td>@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td><strong>Updated By:</strong></td>
                            <td>@Model.UpdatedBy</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group" role="group">
            <a asp-action="Edit" asp-route-id="@Model.ContentId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit Content
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ContentId" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete Content
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Back to List
            </a>
        </div>
    </div>
</div>

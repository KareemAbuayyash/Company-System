@model CompanySystem.Data.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-user-circle"></i> @ViewData["Title"]
                    </h3>
                    <div>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row">
                    <!-- Profile Picture Section -->
                    <div class="col-md-3 text-center mb-4">
                        <div class="profile-picture-container">
                            @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
                            {
                                <img src="@Model.ProfilePhoto" alt="Profile Photo" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3 mx-auto" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-muted"></i>
                                </div>
                            }
                            <h5 class="text-primary">@Model.FullName</h5>
                            <p class="text-muted">@Model.Role?.RoleName</p>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-times-circle"></i> Inactive
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Profile Information -->
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle"></i> Basic Information
                                </h5>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        <i class="fas fa-hashtag text-secondary"></i> Serial Number
                                    </dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-secondary">@Model.SerialNumber</span>
                                    </dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-user text-secondary"></i> Full Name
                                    </dt>
                                    <dd class="col-sm-8">@Model.FullName</dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-envelope text-secondary"></i> Email
                                    </dt>
                                    <dd class="col-sm-8">
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope text-primary"></i> @Model.Email
                                        </a>
                                    </dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-phone text-secondary"></i> Phone Number
                                    </dt>
                                    <dd class="col-sm-8">
                                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                        {
                                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                                <i class="fas fa-phone text-primary"></i> @Model.PhoneNumber
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not provided</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-building"></i> Work Information
                                </h5>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        <i class="fas fa-user-shield text-secondary"></i> Role
                                    </dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Role != null)
                                        {
                                            <span class="badge bg-info">@Model.Role.RoleName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">No Role</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-building text-secondary"></i> Department
                                    </dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Department != null)
                                        {
                                            <span class="badge bg-secondary">@Model.Department.DepartmentName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-calendar text-secondary"></i> Hire Date
                                    </dt>
                                    <dd class="col-sm-8">
                                        <i class="fas fa-calendar-alt text-primary"></i> @Model.HireDate.ToShortDateString()
                                    </dd>

                                    <dt class="col-sm-4">
                                        <i class="fas fa-dollar-sign text-secondary"></i> Salary
                                    </dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Salary.HasValue)
                                        {
                                            <span class="text-success">$@Model.Salary.Value.ToString("0.00")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not specified</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Additional Information -->
                        @if (!string.IsNullOrEmpty(Model.Skills) || !string.IsNullOrEmpty(Model.Experience))
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-graduation-cap"></i> Skills & Experience
                                    </h5>
                                    <div class="row">
                                        @if (!string.IsNullOrEmpty(Model.Skills))
                                        {
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-tools text-secondary"></i> Skills</h6>
                                                <p class="text-muted">@Model.Skills</p>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Experience))
                                        {
                                            <div class="col-md-6">
                                                <h6><i class="fas fa-briefcase text-secondary"></i> Experience</h6>
                                                <p class="text-muted">@Model.Experience</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-action="ChangePassword" class="btn btn-warning">
                                    <i class="fas fa-key"></i> Change Password
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit Profile
                                </a>
                            </div>
                            <div>
                                <span class="text-muted">
                                    <i class="fas fa-clock"></i> Last updated: @(Model.UpdatedDate?.ToString("MMM dd, yyyy HH:mm") ?? "Never")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model CompanySystem.Data.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4>Are you sure you want to delete this user?</h4>
                    <p>This action cannot be undone.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Serial Number</dt>
                            <dd class="col-sm-8">@Model.SerialNumber</dd>

                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@Model.FullName</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Role</dt>
                            <dd class="col-sm-8">@Model.Role?.RoleName</dd>

                            <dt class="col-sm-4">Department</dt>
                            <dd class="col-sm-8">@(Model.Department?.DepartmentName ?? "Not assigned")</dd>

                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

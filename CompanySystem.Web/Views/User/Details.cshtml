@model CompanySystem.Web.ViewModels.UserViewModel
@{
    ViewData["Title"] = "User Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        User Details
                    </h4>
                    <div>
                        <a href="@Url.Action("Edit", "User", new { id = Model.UserId })" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Edit
                        </a>
                        <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-primary mb-3">Personal Information</h5>
                                    <dl class="row">
                                        <dt class="col-sm-4">Full Name</dt>
                                        <dd class="col-sm-8">@Model.FullName</dd>

                                        <dt class="col-sm-4">Username</dt>
                                        <dd class="col-sm-8">@Model.Username</dd>

                                        <dt class="col-sm-4">Email</dt>
                                        <dd class="col-sm-8">@Model.Email</dd>

                                        <dt class="col-sm-4">Phone Number</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                            {
                                                @Model.PhoneNumber
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not provided</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-primary mb-3">Account Information</h5>
                                    <dl class="row">
                                        <dt class="col-sm-4">Role</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Model.RoleName</span>
                                        </dd>

                                        <dt class="col-sm-4">Department</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.DepartmentName))
                                            {
                                                <span class="badge bg-secondary">@Model.DepartmentName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Last Login</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.LastLoginDate.HasValue)
                                            {
                                                @Model.LastLoginDate.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Never logged in</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Audit Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-5">Created</dt>
                                        <dd class="col-sm-7">
                                            <small>@Model.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                            <br>
                                            <small class="text-muted">by @Model.CreatedBy</small>
                                        </dd>

                                        @if (Model.UpdatedDate.HasValue)
                                        {
                                            <dt class="col-sm-5">Last Updated</dt>
                                            <dd class="col-sm-7">
                                                <small>@Model.UpdatedDate.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                                <br>
                                                <small class="text-muted">by @Model.UpdatedBy</small>
                                            </dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


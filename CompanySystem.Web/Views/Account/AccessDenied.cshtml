@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Access Denied
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title">You don't have permission to access this resource</h5>
                    <p class="card-text">
                        Please contact your administrator if you believe you should have access to this page.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>
                            Go to Home
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-1"></i>
                            Login with Different Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

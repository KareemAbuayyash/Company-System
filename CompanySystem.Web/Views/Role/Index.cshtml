@model List<CompanySystem.Web.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = "Roles Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-user-tag me-2"></i>
                        Roles Management
                    </h4>
                    <a href="@Url.Action("Create", "Role")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Add New Role
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Role Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-2">
                                                    <div class="avatar-title bg-info rounded-circle">
                                                        @role.RoleName.Substring(0, 1).ToUpper()
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@role.RoleName</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(role.Description))
                                            {
                                                @role.Description
                                            }
                                            else
                                            {
                                                <span class="text-muted">No description</span>
                                            }
                                        </td>
                                        <td>
                                            @if (role.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@role.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy")</small>
                                            <br>
                                            <small class="text-muted">by @role.CreatedBy</small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Role", new { id = role.RoleId })" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Role", new { id = role.RoleId })" 
                                                   class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="deleteRole(@role.RoleId, '@role.RoleName')" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tag fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No roles found</h5>
                            <p class="text-muted">Get started by adding your first role</p>
                            <a href="@Url.Action("Create", "Role")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Add First Role
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteRole(roleId, roleName) {
            if (confirm('Are you sure you want to delete role "' + roleName + '"? This action cannot be undone.')) {
                $.post('@Url.Action("Delete", "Role")', { id: roleId })
                    .done(function(result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + result.message);
                        }
                    })
                    .fail(function() {
                        alert('An error occurred while deleting the role.');
                    });
            }
        }
    </script>
}

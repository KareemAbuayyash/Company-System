@model IEnumerable<CompanySystem.Data.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-success">
            <i class="fas fa-user-shield"></i> @ViewData["Title"]
        </h2>
        <p class="text-muted">Manage system roles and permissions</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Role
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Role List
            </h5>
            <span class="badge bg-success">@Model.Count() Roles</span>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-hashtag"></i> ID</th>
                        <th><i class="fas fa-user-shield"></i> Role Name</th>
                        <th><i class="fas fa-calendar"></i> Created Date</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-secondary">@role.Id</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-shield fa-2x text-success me-2"></i>
                                    <div>
                                        <strong>@role.RoleName</strong>
                                        @if (role.RoleName == "Administrator")
                                        {
                                            <br><small class="text-danger"><i class="fas fa-crown"></i> System Administrator</small>
                                        }
                                        else if (role.RoleName == "Manager")
                                        {
                                            <br><small class="text-warning"><i class="fas fa-star"></i> Management Level</small>
                                        }
                                        else
                                        {
                                            <br><small class="text-muted"><i class="fas fa-user"></i> Standard Role</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <i class="fas fa-calendar-alt text-primary"></i> @role.CreatedDate.ToShortDateString()
                                <br><small class="text-muted">@role.CreatedDate.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@role.Id" 
                                       class="btn btn-sm btn-outline-info" 
                                       title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@role.Id" 
                                       class="btn btn-sm btn-outline-warning" 
                                       title="Edit Role">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" 
                                       class="btn btn-sm btn-outline-danger" 
                                       title="Delete Role"
                                       onclick="return confirm('Are you sure you want to delete this role? This action cannot be undone.')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-user-shield fa-5x text-muted mb-3"></i>
        <h4 class="text-muted">No Roles Found</h4>
        <p class="text-muted">There are no roles in the system yet.</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create First Role
        </a>
    </div>
}

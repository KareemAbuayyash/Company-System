@model CompanySystem.Data.Models.Role

@{
    ViewData["Title"] = "Delete Role";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4>Are you sure you want to delete this role?</h4>
                    <p>This action cannot be undone.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Role Name</dt>
                    <dd class="col-sm-9">@Model.RoleName</dd>

                    <dt class="col-sm-3">Created Date</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

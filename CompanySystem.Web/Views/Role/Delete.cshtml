@model CompanySystem.Web.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Delete Role";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Delete Role
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Warning!
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this role? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Role Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.RoleName</dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Model.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Audit Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">
                                    <small>@Model.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy")</small>
                                    <br>
                                    <small class="text-muted">by @Model.CreatedBy</small>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.RoleId" />
                        
                        <div class="d-flex justify-content-end mt-4">
                            <a href="@Url.Action("Index", "Role")" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>
                                Delete Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

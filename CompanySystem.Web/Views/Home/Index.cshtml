@model CompanySystem.Web.ViewModels.MainPageViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row justify-content-center text-center mb-5">
        <div class="col-lg-10">
            <div class="hero-section p-5 rounded-4 bg-primary text-white">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fas fa-building-columns me-3"></i>
                    Company Management System
                </h1>
                <p class="lead mb-4">
                    Streamline your organizational structure with our comprehensive management solution
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="@Url.Action("Index", "Department")" class="btn btn-light btn-lg">
                        <i class="fas fa-eye me-2"></i>
                        View Departments
                    </a>
                    <a href="@Url.Action("Create", "Department")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>
                        Create Department
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Dynamic Content Sections -->
    @if (Model.Sections.Any())
    {
        @foreach (var contentSection in Model.Sections.OrderBy(s => s.SectionName))
        {
            <div class="row justify-content-center mb-5">
                <div class="col-lg-10">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center bg-light">
                            <span class="badge bg-secondary">@contentSection.SectionName</span>
                            <button class="btn btn-sm btn-outline-primary" 
                                    onclick="openEditModal('@contentSection.SectionName', '@Html.Raw(Html.Encode(contentSection.Title))', '@Html.Raw(Html.Encode(contentSection.Content))')">
                                <i class="fas fa-edit"></i> Quick Edit
                            </button>
                        </div>
                        <div class="card-body p-5">
                            @if (contentSection.SectionName == "Overview")
                            {
                                <div class="text-center">
                                    <i class="fas fa-eye fa-3x text-primary mb-3"></i>
                                    <h2 class="card-title text-primary mb-4">@contentSection.Title</h2>
                                    <div class="lead">
                                        @Html.Raw(contentSection.Content.Replace("\n", "<br/>"))
                                    </div>
                                </div>
                            }
                            else if (contentSection.SectionName == "AboutUs")
                            {
                                <div class="row align-items-center">
                                    <div class="col-md-2 text-center">
                                        <i class="fas fa-users fa-4x text-info"></i>
                                    </div>
                                    <div class="col-md-10">
                                        <h2 class="card-title text-info mb-4">@contentSection.Title</h2>
                                        <div>
                                            @Html.Raw(contentSection.Content.Replace("\n", "<br/>"))
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (contentSection.SectionName == "Services")
                            {
                                <div class="row align-items-center">
                                    <div class="col-md-10">
                                        <h2 class="card-title text-success mb-4">@contentSection.Title</h2>
                                        <div>
                                            @Html.Raw(contentSection.Content.Replace("\n", "<br/>"))
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <i class="fas fa-cogs fa-4x text-success"></i>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center">
                                    <h2 class="card-title mb-4">@contentSection.Title</h2>
                                    <div>
                                        @Html.Raw(contentSection.Content.Replace("\n", "<br/>"))
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <!-- Fallback content when no dynamic content is available -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No content available</h4>
                    <p>The main page content is being updated. Please check back later.</p>
                </div>
            </div>
        </div>
    }

    <!-- Admin Link -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10 text-center">
            <a href="@Url.Action("Index", "MainPageContent")" class="btn btn-outline-secondary">
                <i class="fas fa-cog me-2"></i>
                Manage Content (Admin)
            </a>
        </div>
    </div>
</div>

<!-- Edit Content Modal -->
<div class="modal fade" id="editContentModal" tabindex="-1" aria-labelledby="editContentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editContentModalLabel">Quick Edit Content</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editContentForm" method="post" action="@Url.Action("QuickEdit", "Home")">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="editSectionName" name="SectionName" />
                    
                    <div class="mb-3">
                        <label for="editTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="editTitle" name="Title" required maxlength="200" />
                    </div>
                    
                    <div class="mb-3">
                        <label for="editContent" class="form-label">Content</label>
                        <textarea class="form-control" id="editContent" name="Content" rows="8" required 
                                  placeholder="Enter content. HTML tags are supported for formatting."></textarea>
                        <div class="form-text">HTML tags are supported for text formatting.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(sectionName, title, content) {
            // Decode HTML entities
            title = $('<div>').html(title).text();
            content = $('<div>').html(content).text();
            
            // Set the form values
            document.getElementById('editSectionName').value = sectionName;
            document.getElementById('editTitle').value = title;
            document.getElementById('editContent').value = content;
            
            // Update modal title
            document.getElementById('editContentModalLabel').textContent = 'Quick Edit - ' + sectionName;
            
            // Show the modal
            var modal = new bootstrap.Modal(document.getElementById('editContentModal'));
            modal.show();
        }

        // Handle form submission with AJAX
        document.getElementById('editContentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            var formData = new FormData(this);
            var submitButton = this.querySelector('button[type="submit"]');
            var originalText = submitButton.innerHTML;
            
            // Show loading state
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            submitButton.disabled = true;
            
            fetch(this.action, {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Close modal
                    bootstrap.Modal.getInstance(document.getElementById('editContentModal')).hide();
                    
                    // Show success message and reload page
                    alert('Content updated successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + (data.message || 'Failed to update content'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating the content');
            })
            .finally(() => {
                // Reset button state
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            });
        });
    </script>
} 
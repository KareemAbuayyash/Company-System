@using System.Security.Claims
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px;
        padding: 3rem 2rem;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="1" fill="white" opacity="0.05"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
    }

    .icon-primary { background: linear-gradient(135deg, #667eea, #764ba2); }
    .icon-success { background: linear-gradient(135deg, #56ab2f, #a8e6cf); }
    .icon-info { background: linear-gradient(135deg, #36d1dc, #5b86e5); }
    .icon-warning { background: linear-gradient(135deg, #f093fb, #f5576c); }

    .feature-card .btn {
        border-radius: 25px;
        padding: 0.6rem 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
    }

    .stats-card {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
        border: 1px solid rgba(102, 126, 234, 0.2);
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .welcome-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        margin-bottom: 1rem;
        backdrop-filter: blur(10px);
    }

    .quick-actions {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 2rem;
        margin-top: 2rem;
    }

    .action-btn {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 1rem;
        text-decoration: none;
        color: #333;
        transition: all 0.3s ease;
        display: block;
        margin-bottom: 1rem;
    }

    .action-btn:hover {
        border-color: #667eea;
        color: #667eea;
        transform: translateX(5px);
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 1rem;
        }
        
        .feature-card {
            margin-bottom: 1.5rem;
        }
    }
</style>

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- Hero Section for Authenticated Users -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="welcome-badge">
                <i class="fas fa-user-check"></i> Welcome Back
            </div>
            <h1 class="display-4 mb-3">Hello, @User.Identity.Name!</h1>
            <p class="lead mb-4">
                Ready to manage your company system? Let's get started with your daily tasks.
            </p>
            <div class="row mt-4">
                <div class="col-md-3 col-6 mb-3">
                    <div class="stats-card">
                        <div class="stats-number">@User.FindFirst(ClaimTypes.NameIdentifier)?.Value</div>
                        <div class="text-muted">User ID</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stats-card">
                        <div class="stats-number">@(User.HasClaim("Role", "Administrator") ? "Admin" : "User")</div>
                        <div class="text-muted">Access Level</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stats-card">
                        <div class="stats-number">@User.FindFirst("SerialNumber")?.Value</div>
                        <div class="text-muted">Serial Number</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stats-card">
                        <div class="stats-number">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="text-muted">Secure Access</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Cards -->
    <div class="row">
        <!-- User Management Card - Only for Administrators -->
        @if (User.HasClaim("Role", "Administrator"))
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon icon-primary text-white">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">User Management</h5>
                    <p class="text-muted text-center mb-4">
                        Create, edit, and manage system users. Control access levels and permissions with full administrative control.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="User" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-list me-1"></i> Manage Users
                        </a>
                        <a asp-controller="User" asp-action="Create" class="btn btn-outline-primary">
                            <i class="fas fa-plus me-1"></i> Add New User
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Role Management Card - Only for Administrators -->
        @if (User.HasClaim("Role", "Administrator"))
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon icon-success text-white">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">Role Management</h5>
                    <p class="text-muted text-center mb-4">
                        Configure roles, permissions, and access levels. Define what different user types can do in the system.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Role" asp-action="Index" class="btn btn-success">
                            <i class="fas fa-list me-1"></i> Manage Roles
                        </a>
                        <a asp-controller="Role" asp-action="Create" class="btn btn-outline-success">
                            <i class="fas fa-plus me-1"></i> Add New Role
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Profile Management Card - For All Authenticated Users -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="feature-card">
                <div class="feature-icon icon-info text-white">
                    <i class="fas fa-user-circle"></i>
                </div>
                <h5 class="card-title text-center mb-3">My Profile</h5>
                <p class="text-muted text-center mb-4">
                    View and edit your personal information, change your password, and manage your account settings.
                </p>
                <div class="d-grid gap-2">
                    <a asp-controller="User" asp-action="Profile" class="btn btn-info">
                        <i class="fas fa-user me-1"></i> View Profile
                    </a>
                    <a asp-controller="User" asp-action="ChangePassword" class="btn btn-outline-info">
                        <i class="fas fa-key me-1"></i> Change Password
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        @if (User.HasClaim("Role", "Administrator") || User.HasClaim("Role", "HR") || User.HasClaim("Role", "Lead"))
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon icon-warning text-white">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <h5 class="card-title text-center mb-3">Quick Actions</h5>
                    <p class="text-muted text-center mb-4">
                        Quick access to frequently used features and important system functions.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">
                            <i class="fas fa-refresh me-1"></i> Refresh Dashboard
                        </a>
                        <button type="button" class="btn btn-outline-warning" onclick="showSystemInfo()">
                            <i class="fas fa-info-circle me-1"></i> System Info
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Quick Actions Section -->
    <div class="quick-actions">
        <h4 class="mb-4">
            <i class="fas fa-bolt text-warning"></i> Quick Actions
        </h4>
        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Profile", "User")" class="action-btn">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-user-edit fa-2x text-primary"></i>
                        </div>
                        <div>
                            <strong>Update Profile</strong><br>
                            <small class="text-muted">Edit your personal information</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ChangePassword", "User")" class="action-btn">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-lock fa-2x text-success"></i>
                        </div>
                        <div>
                            <strong>Change Password</strong><br>
                            <small class="text-muted">Update your account security</small>
                        </div>
                    </div>
                </a>
            </div>
            @if (User.HasClaim("Role", "Administrator"))
            {
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Index", "User")" class="action-btn">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-users-cog fa-2x text-info"></i>
                            </div>
                            <div>
                                <strong>User Administration</strong><br>
                                <small class="text-muted">Manage all system users</small>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Index", "Role")" class="action-btn">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-shield-alt fa-2x text-warning"></i>
                            </div>
                            <div>
                                <strong>Role Management</strong><br>
                                <small class="text-muted">Configure user permissions</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

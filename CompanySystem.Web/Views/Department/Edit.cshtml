@model CompanySystem.Web.ViewModels.EditDepartmentViewModel

@{
    ViewData["Title"] = "Edit Department";
    ViewBag.SubmitText = "Update Department";
}

<div class="container-fluid">
    @await Html.PartialAsync("_AlertsPartial")
    
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-edit text-warning me-2"></i>
                    Edit Department
                </h2>
                <div>
                    <a href="@Url.Action("Details", "Department", new { id = Model.DepartmentId })" class="btn btn-outline-info">
                        <i class="fas fa-eye me-1"></i>
                        View Details
                    </a>
                    <a href="@Url.Action("Index", "Department")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to List
                    </a>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card department-card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-building me-2 text-primary"></i>
                                Department Information
                            </h4>
                        </div>
                        <div class="card-body">
                            <form action="@Url.Action("Edit", "Department", new { id = Model.DepartmentId })" method="post">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.DepartmentId)
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="DepartmentName" class="form-label fw-semibold">
                                        <i class="fas fa-building me-1 text-primary"></i>
                                        @Html.DisplayNameFor(m => m.DepartmentName)
                                    </label>
                                    <input asp-for="DepartmentName" class="form-control form-control-lg" placeholder="Enter department name..." />
                                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                                </div>

                                <div class="d-flex gap-2 mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="fas fa-save me-2"></i>
                                        @ViewBag.SubmitText
                                    </button>
                                    <a href="@Url.Action("Index", "Department")" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="fas fa-times me-2"></i>
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

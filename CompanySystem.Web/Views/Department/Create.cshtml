@model CompanySystem.Web.ViewModels.CreateDepartmentViewModel

@{
    ViewData["Title"] = "Create Department";
    ViewBag.SubmitText = "Create Department";
}

<div class="container-fluid">
    @await Html.PartialAsync("_AlertsPartial")
    
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-plus-circle text-success me-2"></i>
                    Create New Department
                </h2>
                <a href="@Url.Action("Index", "Department")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to List
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card department-card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-building me-2 text-primary"></i>
                                Department Information
                            </h4>
                        </div>
                        <div class="card-body">
                            <form action="@Url.Action("Create", "Department")" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                @await Html.PartialAsync("_DepartmentFormPartial", Model)
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
